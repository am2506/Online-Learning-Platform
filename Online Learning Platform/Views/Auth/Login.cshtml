<!-- Register -->
@model LoginViewModel
<div class="register py-5" style="background-image:url('@Url.Content("~/images/register_background0.jpg")')">

	<div class="container">
		
		<div class="row justify-content-center">
			<div class="col-lg-8">
                <!-- Register Section -->
                <div class="register_section d-flex flex-column align-items-center justify-content-center">
                    <div class="register_content text-center align-self-center">
                        <h1 class="register_title">Log in to continue your learning journey</h1>
                        <form id="register_form" class="register_form" method="post" asp-action="Login">
                            <div class="form-group">
                                <input id="register_email" class="form-control" asp-for="Email" placeholder="Email Address" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="register_password" type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>                           
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>


                            <div class="btn">

                                <button type="submit" class="btn btn-primary btn-lg">Log in</button>
                            </div>
                        </form>

                        <a asp-action="Forgetpassword">Forget Password?</a>
                        <p class="mt-3">Don't have an account? <a asp-action="SignUp">Sign up</a></p>
                    </div>
                </div>
			</div>
		</div>
	</div>
</div>