@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Register Section -->
            <div class="register_section d-flex flex-column align-items-center justify-content-center">
                <div class="register_content text-center align-self-center">
                    <h1 class="register_title">Create Your Account</h1>
                    <form id="register_form" class="register_form" method="post" asp-action="ResetPassword">
                         <div class="form-group">
                            <input id="register_password" type="password" class="form-control" asp-for="Password" placeholder="New Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input id="register_confirm_password" type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="btn">
                            <button type="submit" class="btn btn-primary btn-lg">New Password</button>
                        </div>
                    </form>
                    <div asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
    </div>
</div>

