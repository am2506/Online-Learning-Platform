<!-- Register -->
@model SignUpViewModel
<div class="register py-5" style="background-image:url('@Url.Content("~/images/register_background0.jpg")')">

    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Register Section -->
                <div class="register_section d-flex flex-column align-items-center justify-content-center">
                    <div class="register_content text-center align-self-center">
                        <h1 class="register_title">Create Your Account</h1>
                        <form id="register_form" class="register_form" method="post" asp-action="SignUp">
                            <div class="form-group">
                                <input id="register_name" class="form-control" asp-for="FirstName" placeholder="First Name" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="register_name" class="form-control" asp-for="LastName" placeholder="Last Name" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="register_email" class="form-control" asp-for="Email" placeholder="Email Address" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="register_password" type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="register_confirm_password" type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="btn">
                                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                            </div>
                        </form>
                        <div asp-validation-summary="All"></div>
                        <p class="mt-3">Already have an account? <a href="/Student/Login">Log in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
