

@model List<Course>
<h2>Courses</h2>

<a asp-action="AddCourse" class="btn btn-primary">Add New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            @* <th>Instructor</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                 @* <td>@course.Category</td> <!-- Showing Instructor's username -->  *@
<td>
    <a asp-action="EditCourse" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
    <a asp-action="DeleteCourse" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

 
