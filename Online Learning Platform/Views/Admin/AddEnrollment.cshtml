@model Online_Learning_Platform.Models.Enrollment

<form asp-action="AddEnrollment" method="post">
    <div class="form-group">
        <label asp-for="CourseId">Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
    </div>

    <div class="form-group">
        <label asp-for="StudentId">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>

    <div class="form-group">
        <label asp-for="Prograss">Progress</label>
        <input asp-for="Prograss" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EnrollmentDate">Enrollment Date</label>
        <input asp-for="EnrollmentDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
<div>
    <a asp-action="Enrollments">Back to List</a>
</div>

