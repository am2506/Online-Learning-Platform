@model ProfileDetialsViewModel
@{
    ViewData["Title"] = "UpdateProfile";
    TempData["UserName"] = Model.UserName;
    var backgroundImageURL = "~/images/updateprofile_background.jpeg";
    if(Model.ImageUrl != null)
    {
        backgroundImageURL = $"~/userimages/{ Model.ImageUrl}";
    }
	

}
<link href="~/css/profiledetails.css" rel="stylesheet" />


<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-controller="Student" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                            <h1 class="text-center">Profile Image</h1>
                            <div class="avatar-upload mb-4">
                                <div class="avatar-edit">
                                    <input type="file" asp-for="ProfileImage" id="imageUpload" accept=".png, .jpg, .jpeg" onchange="previewImage(event)" />
                                    <label for="imageUpload"></label>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="background-image: url('@Url.Content(backgroundImageURL)');"></div>
                                </div>
                            </div>
							 
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">First Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="FirstName" class="form-control" name="FirstName" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Last Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="LastName" class="form-control mt-2" name="LastName" />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <input type="email" readonly class="form-control" name="Email" value="@Model.Email" />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="PhoneNumber" class="form-control" name="PhoneNumber" />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imagePreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.style.backgroundImage = `url(${e.target.result})`;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
