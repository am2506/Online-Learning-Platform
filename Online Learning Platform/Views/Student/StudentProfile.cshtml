@model ProfileDetialsViewModel
@{
    ViewData["Title"] = "StudentProfile";
}
<link href="~/css/profiledetails.css" rel="stylesheet" />
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <!--Profile Image-->
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                <span class="text-black-50">@Model.Email</span>
            </div>
        </div>

        <!--Profile Details-->
        <div class="profile col-md-8 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>

                <!--Name-->
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">First Name</label>
                        <input asp-for="FirstName" readonly class="form-control" placeholder="First name" />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Last Name</label>
                        <input asp-for="LastName" readonly class="form-control" placeholder="Last Name" />
                    </div>
                </div>

                <!--Contact Details-->
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Mobile Number</label>
                        <input asp-for="PhoneNumber" class="form-control" readonly placeholder="Phone number" />
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Email</label>
                        <input asp-for="Email" class="form-control" readonly placeholder="Email ID" />
                    </div>
                   @*  <div class="col-md-12">
                        <label class="labels">Education</label>
                        <input asp-for="Education" class="form-control" readonly placeholder="Education" />
                    </div>
                </div>

                <!--Location Details-->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="labels">Country</label>
                        <input asp-for="Country" class="form-control" readonly placeholder="Country" />
                    </div>
                    <div class="col-md-6">
                        <label class="labels">State/Region</label>
                        <input asp-for="State" class="form-control" readonly placeholder="State/Region" />
                    </div>
                </div>

                <!--Buttons-->
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="button">Save Profile</button>
                </div> *@
            </div>
        </div>
    </div>
</div>
