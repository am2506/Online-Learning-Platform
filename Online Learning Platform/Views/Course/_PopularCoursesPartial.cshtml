@model IEnumerable<Course>
@{

}
<!-- Popular -->



<link rel="stylesheet" type="text/css" href="~/styles/courses_styles.css">
<link rel="stylesheet" type="text/css" href="~/styles/courses_responsive.css">


	
	<!-- Popular -->

	<div class="popular page_section">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<h1>Popular Courses</h1>
					</div>
				</div>
			</div>

			<div class="row course_boxes">
				@foreach (var course in Model)
				{
					<!-- Popular Course Item -->
					<div class="col-lg-4 course_box">
						<div class="card">
							<img class="card-img-top" src="@course.ImageUrl" alt="https://unsplash.com/kellybrito">
							<div class="card-body text-center">
							<div class="card-title"><a href="">@course.Title</a></div>
							<div class="card-text" style="height:5rem; overflow:hidden;" title="Hover to see full description">@course.Description</div>
							</div>
							<div class="price_box d-flex flex-row align-items-center">
								@* <div class="course_author_image">
							<img src="@course.Instructor.ImageUrl" alt="instructor image">
							</div> *@
								<div class="course_author_name">@course.Instructor.FirstName @course.Instructor.LastName,		<span>Instructor</span>
								
								</div>
							@* <a asp-controller="Enrollment" asp-action="Enroll" asp-route-Id="@course.Id" style="color:gold;">Enroll Now</a> *@
								<div class="course_price d-flex flex-column align-items-center justify-content-center" style="width:80px;">
								<a asp-controller="Enrollment" asp-action="Enroll" asp-route-Id="@course.Id" style="color:white;">Enroll Now</a>
								</div>
							</div>
						</div>
					</div>
				}


			</div>
		</div>
	</div>

<script src="~/js/courses_custom.js"></script>
<script>
	document.querySelectorAll('.card-text').forEach(element => {
		element.addEventListener('mouseenter', function () {
			this.style.height = 'auto';
		});
		element.addEventListener('mouseleave', function () {
			this.style.height = '5rem';
		});
	});
</script>
