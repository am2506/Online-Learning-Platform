@model Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<partial name="_HomePartialView" />



 <html>
<head>

</head>
<body>
    <section class="py-5" >
        <div class="container" style="box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;">
            <div class="row gx-5">
                <aside class="col-lg-6">
                    <div class="border rounded-4 mb-3 d-flex justify-content-center" style="margin-top: 1rem !important">
                        <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big.webp">
                            <img style="max-width: 100%; max-height: 100vh; margin-top: 10px;border-radius:8px;" class="rounded-4 fit" src="@Model.ImageUrl" />
                        </a>
                    </div>


                </aside>
                <main class="col-lg-6" style="margin-top: 1rem !important">
                    <div class="ps-lg-3">
                        <h4 @* class="title text-dark" *@ style="font-size:40px;color:#286099">
                            @Model.FirstName @Model.LastName  &nbsp;  <a href="mailto:@Model.Email" >
                                <i class="bi bi-envelope-at"></i>
