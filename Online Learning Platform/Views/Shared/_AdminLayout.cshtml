<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"></script>
</head>
<body>
    <div class="admin-wrapper">
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h3>Admin Dashboard</h3>
            </div>
            <ul class="sidebar-menu">
                <li><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                <li><a href="@Url.Action("Courses", "Admin")">Manage Courses</a></li>
                <li><a href="@Url.Action("Users", "Admin")">Manage Users</a></li>
                <li><a href="@Url.Action("Categories", "Admin")">Manage Categories</a></li>


                <li><a href="@Url.Action("Enrollments", "Admin")">Manage Enrollments</a></li>
            </ul>
        </nav>

        <div class="admin-content">
            <header class="admin-header">
                <h1>@ViewData["Title"]</h1>
            </header>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/js/admin.js"></script>
</body>
</html>
